<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th># of products</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.products.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Category", [:new, :admin, :category], class: "btn btn-primary" %>
